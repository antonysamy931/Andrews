@model Tinytots.English.DTO.ViewModel.LessonModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="header">Lesson</div>
<div class="page-center">
    <div class="h2">Are you sure you want to delete this?</div>


    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4 right">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 right">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" value="Delete" class="btn btn-primary" /> <a href="@Url.Action("Index")" class="btn btn-primary back-to-list">Back to List</a>
                </div>
            </div>
        }
    </div>
</div>