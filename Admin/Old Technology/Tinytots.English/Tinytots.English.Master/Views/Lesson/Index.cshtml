@model IEnumerable<Tinytots.English.DTO.CustomDTO.LessonDTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="header">Vocabulary</div>
@{ int i = 1;}
<div class="create">
    @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary" })
</div>
@if (Model != null && Model.Count() > 0)
{
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>S. No.</th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>@i</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit",new { id = item.Id})" title="Edit">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("Details",new { id = item.Id })" title="Detail">
                            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" title="Delete">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("Create","Page",new { lessonId = item.Id })" title="Add Page">
                            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                        </a>                        
                    </td>
                </tr>
            </tbody>
            { i++; }
        }

    </table>
}