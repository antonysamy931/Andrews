@model Tinytots.English.DTO.ViewModel.LessonModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header">Lesson</div>

<div class="page-center">
    <div class="h2">Details</div>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4 right">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 right">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <a href="@Url.Action("Edit",new { id = Model.Id })" class="btn btn-primary back-to-list">Edit</a> <a href="@Url.Action("Index")" class="btn btn-primary back-to-list">Back to Lesson</a> <a href="@Url.Action("Create", "Page",new { lessonId = Model.Id })" class="btn btn-primary back-to-list">Add New Page</a>
            </div>
        </div>        
    </div>    
</div>

<div class="page-center" style="min-height:50px;max-width:40%;">
    @Html.Action("Index", "Page", new { id = Model.Id })
</div>