@model Tinytots.English.DTO.ViewModel.VocabularyModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="header">Vocabulary</div>
<div class="page-center">
    <div class="h2">Edit</div>


    @using (Html.BeginForm("Edit", "Vocabulary", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.ImageId)

            <div class="form-group">
                @Html.LabelFor(model => model.Word, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Word, new { htmlAttributes = new { @class = "form-control", placeholder = "Word" } })
                    <div class="error-form">
                        @Html.ValidationMessageFor(model => model.Word, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Synonym, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Synonym, new { htmlAttributes = new { @class = "form-control", placeholder = "Synonym" } })
                    <div class="error-form">
                        @Html.ValidationMessageFor(model => model.Synonym, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <hr />
            <div class="h4">Image</div>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <input type="file" name="image" />
                </div>
            </div>
            @if (Model.ImageId != null && Model.ImageId.Value != 0)
            {
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <img class="img-responsive img-thumbnail custom-image" src="@Url.Action("ViewImage","Image",new { id = Model.ImageId})" />
                    </div>
                </div>
            }

            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" value="Save" class="btn btn-primary" />  <a href="@Url.Action("Index")" class="btn btn-primary back-to-list">Back to List</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
