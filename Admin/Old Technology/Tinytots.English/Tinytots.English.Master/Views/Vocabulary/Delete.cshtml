@model Tinytots.English.DTO.ViewModel.VocabularyModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header">Vocabulary</div>
<div class="page-center">
    <div class="h2">Are you sure you want to delete this?</div>

    <div>
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-4 right">
                    @Html.LabelFor(model => model.Word)
                </div>
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.Word)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4 right">
                    @Html.LabelFor(model => model.Synonym)
                </div>
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.Synonym)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4 right">
                    <label>Image</label>
                </div>
                <div class="col-md-8">
                    <img class="img-responsive img-thumbnail custom-image" src="@Url.Action("ViewImage","Image",new { id = Model.ImageId })" />
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" value="Delete" class="btn btn-primary" /> <a href="@Url.Action("Index")" class="btn btn-primary back-to-list">Back to List</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>