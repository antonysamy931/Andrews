@model Tinytots.English.DTO.ViewModel.PageModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Lesson</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Lesson.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lesson.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lesson.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lesson.Description)
        </dd>

    </dl>
</div>

<h2>Create New Page</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Page</h4>
        @Html.HiddenFor(model => model.LessonId)
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea name="Content" class="form-control editor"></textarea>                
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to Lesson", "Details","Lesson",new { id = Model.LessonId.Value })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqte")
}
<script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="~/Scripts/jquery-te-1.4.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.editor').jqte();        
    });
</script>