@model IEnumerable<Tinytots.English.DTO.ViewModel.PageModel>
@{
    Layout = null;
}
@if (Model != null && Model.Count() > 0)
{

    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>
                    PAGE
                </th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        @{
            int page = 1;
        }
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.ActionLink("Page " + page, "Details", new { id = item.Id, lessonId = item.LessonId })
                    </td>
                    <td style="text-align:center;">
                        <a href="@Url.Action("Edit",new { id = item.Id, lessonId = item.LessonId })" title="Edit">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("Details",new { id = item.Id, lessonId = item.LessonId })" title="Detail">
                            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id, lessonId = item.LessonId })" title="Delete">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            </tbody>
            page++;
        }
    </table>
            }