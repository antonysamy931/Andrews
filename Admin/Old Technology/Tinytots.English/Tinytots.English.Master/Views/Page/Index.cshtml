@model IEnumerable<Tinytots.English.DTO.ViewModel.PageModel>
@{ 
    Layout = null;
}
@if (Model != null && Model.Count() > 0)
{
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessonId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LessonId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id, lessonId = item.LessonId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id, lessonId = item.LessonId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id, lessonId = item.LessonId })
                </td>
            </tr>
        }
    </table>
}