@model Tinytots.English.DTO.ViewModel.PageModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header">Page</div>
<div class="page-center">
    <div class="h2">Detail</div>    

    <div class="form-horizontal">        
        <div class="header-lesson">
            Lesson Detail
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-4 right">
                @Html.LabelFor(model => model.Lesson.Name)
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.Lesson.Name)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 right">
                @Html.LabelFor(model => model.Lesson.Description)
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.Lesson.Description)
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-2 right">
                <label class="control-label">Content</label>
            </div>
            <div class="col-md-10">
                <div id="Content"></div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <a href="@Url.Action("Edit", "Page", new { id = Model.Id, lessonId = Model.LessonId.Value })" class="btn btn-primary back-to-list">Edit</a> <a href="@Url.Action("Details", "Lesson", new { id = Model.LessonId.Value })" class="btn btn-primary back-to-list">Back to Lesson</a> <a href="@Url.Action("Index", "Lesson")" class="btn btn-primary back-to-list">Back to Lessons</a>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Content').html('@Html.Raw(Model.Content)');
    });
</script>
