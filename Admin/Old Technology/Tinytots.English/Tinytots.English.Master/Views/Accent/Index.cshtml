@model IEnumerable<Tinytots.English.DTO.ViewModel.AccentModel>

@{
    ViewBag.Title = "Accent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header">Accent</div>
@{ int i = 1;}
<div class="create">
    @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary" })
</div>
@if (Model != null && Model.Count() > 0)
{
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>S. No.</th>
                <th>
                    @Html.DisplayNameFor(model => model.British)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.American)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.British)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.American)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit",new { id = item.Id})" title="Edit">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("Details",new { id = item.Id })" title="Detail">
                            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" title="Delete">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>                        
                    </td>
                </tr>
                { i++; }
            }
        </tbody>
    </table>
}

